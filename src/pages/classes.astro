---
import Layout
    from "../layouts/Layout.astro";
const classes = [
  {
    title: "Entrenamiento de Fuerza",
    schedule: "Lunes y Miércoles - 18:00",
    category: "musculacion",
    description: "Desarrolla tu fuerza y resistencia muscular",
    image: "/public/class-2.jpg"
  },
  {
    title: "Hipertrofia",
    schedule: "Martes y Jueves - 19:00",
    category: "musculacion",
    description: "Maximiza el crecimiento muscular",
    image: "/public/class-2.jpg"
  },
  {
    title: "WOD Diario",
    schedule: "Todos los días - 17:00",
    category: "crossfit",
    description: "Workout of the Day con ejercicios variados",
    image: "/public/class-2.jpg"
  },
  {
    title: "HIIT CrossFit",
    schedule: "Lunes, Miércoles y Viernes - 20:00",
    category: "crossfit",
    description: "Entrenamiento de alta intensidad",
    image: "/public/class-2.jpg"
  },
  {
    title: "Yoga Flow",
    schedule: "Martes y Jueves - 09:00",
    category: "yoga",
    description: "Conecta con tu cuerpo y mente",
    image: "/public/class-2.jpg"
  },
  {
    title: "Meditación y Relajación",
    schedule: "Viernes - 18:30",
    category: "yoga",
    description: "Reduce el estrés y mejora tu bienestar",
    image: "/public/class-2.jpg"
  },
  {
    title: "Spinning Intenso",
    schedule: "Lunes, Miércoles y Viernes - 07:00",
    category: "spinning",
    description: "Cardio de alto impacto con música motivadora",
    image: "/public/class-2.jpg"
  },
  {
    title: "Cycling Rítmico",
    schedule: "Martes y Jueves - 19:30",
    category: "spinning",
    description: "Pedalea al ritmo de la música",
    image: "/public/class-2.jpg"
  }
];
---
<Layout>
<section id="clases" class="py-16 bg-gray-100 dark:bg-gray-900">
  <div class="container max-w-screen-xl mx-auto p-4">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-gray-900 dark:text-white">Nuestras Clases</h2>

    <div class="mb-8 flex flex-wrap justify-center gap-2">
      <button class="filter-btn active py-2 px-4 rounded-full bg-black text-white hover:bg-gray-800 transition-colors dark:bg-blue-600 dark:hover:bg-blue-700" data-filter="all">
        Todos
      </button>
      <button class="filter-btn py-2 px-4 rounded-full bg-gray-200 hover:bg-gray-300 transition-colors dark:bg-gray-700 dark:text-gray-200 dark:hover:bg-gray-600" data-filter="musculacion">
        Musculación
      </button>
      <button class="filter-btn py-2 px-4 rounded-full bg-gray-200 hover:bg-gray-300 transition-colors dark:bg-gray-700 dark:text-gray-200 dark:hover:bg-gray-600" data-filter="crossfit">
        CrossFit
      </button>
      <button class="filter-btn py-2 px-4 rounded-full bg-gray-200 hover:bg-gray-300 transition-colors dark:bg-gray-700 dark:text-gray-200 dark:hover:bg-gray-600" data-filter="yoga">
        Yoga
      </button>
      <button class="filter-btn py-2 px-4 rounded-full bg-gray-200 hover:bg-gray-300 transition-colors dark:bg-gray-700 dark:text-gray-200 dark:hover:bg-gray-600" data-filter="spinning">
        Spinning
      </button>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 class-grid">
      {classes.map((classItem) => (
        <div class={`class-card ${classItem.category}`}>
          <div class="bg-white rounded-lg overflow-hidden shadow-md transition-transform hover:shadow-xl hover:-translate-y-1 dark:bg-gray-800">
            <div class="relative">
              <img src={classItem.image} alt={classItem.title} class="w-full h-64 object-cover">
              <div class="overlay absolute inset-0 bg-black bg-opacity-60 flex flex-col justify-center items-center text-white opacity-0 hover:opacity-100 transition-opacity duration-300 p-4 text-center">
                <p class="mb-4">{classItem.description}</p>
                <button class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors">Reservar plaza</button>
              </div>
            </div>
            <div class="p-4">
              <h3 class="text-xl font-bold mb-1 text-gray-900 dark:text-white">{classItem.title}</h3>
              <p class="text-gray-600 dark:text-gray-300 mb-2">{classItem.schedule}</p>
              <span class={`inline-block px-3 py-1 rounded-full text-sm font-medium
                ${classItem.category === "musculacion" ? "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300" : ""}
                ${classItem.category === "crossfit" ? "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300" : ""}
                ${classItem.category === "yoga" ? "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300" : ""}
                ${classItem.category === "spinning" ? "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300" : ""}
              `}>{classItem.category.charAt(0).toUpperCase() + classItem.category.slice(1)}</span>
            </div>
          </div>
        </div>
      ))}
    </div>
<div class="pt-8 w-full overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">Hora</th>
                <th scope="col" class="px-6 py-3">Lunes</th>
                <th scope="col" class="px-6 py-3">Martes</th>
                <th scope="col" class="px-6 py-3">Miércoles</th>
                <th scope="col" class="px-6 py-3">Jueves</th>
                <th scope="col" class="px-6 py-3">Viernes</th>
                <th scope="col" class="px-6 py-3">Sábado</th>
                <th scope="col" class="px-6 py-3">Domingo</th>
            </tr>
        </thead>
        <tbody>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <td data-label="Hora" class="px-6 py-4 font-medium text-gray-900 dark:text-white whitespace-nowrap">07:00</td>
                <td data-label="Lunes" class="px-6 py-4"><span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">Spinning</span></td>
                <td data-label="Martes" class="px-6 py-4"><span class="bg-red-100 text-red-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-red-900 dark:text-red-300">Musculación</span></td>
                <td data-label="Miércoles" class="px-6 py-4"><span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">Spinning</span></td>
                <td data-label="Jueves" class="px-6 py-4"><span class="bg-red-100 text-red-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-red-900 dark:text-red-300">Musculación</span></td>
                <td data-label="Viernes" class="px-6 py-4"><span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">Spinning</span></td>
                <td data-label="Sábado" class="px-6 py-4"><span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">CrossFit</span></td>
                <td data-label="Domingo" class="px-6 py-4">-</td>
            </tr>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <td data-label="Hora" class="px-6 py-4 font-medium text-gray-900 dark:text-white whitespace-nowrap">09:00</td>
                <td data-label="Lunes" class="px-6 py-4"><span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">CrossFit</span></td>
                <td data-label="Martes" class="px-6 py-4"><span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">Yoga</span></td>
                <td data-label="Miércoles" class="px-6 py-4"><span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">CrossFit</span></td>
                <td data-label="Jueves" class="px-6 py-4"><span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">Yoga</span></td>
                <td data-label="Viernes" class="px-6 py-4"><span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">CrossFit</span></td>
                <td data-label="Sábado" class="px-6 py-4"><span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">Yoga</span></td>
                <td data-label="Domingo" class="px-6 py-4">-</td>
            </tr>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <td data-label="Hora" class="px-6 py-4 font-medium text-gray-900 dark:text-white whitespace-nowrap">12:00</td>
                <td data-label="Lunes" class="px-6 py-4"><span class="bg-red-100 text-red-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-red-900 dark:text-red-300">Musculación</span></td>
                <td data-label="Martes" class="px-6 py-4"><span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">CrossFit</span></td>
                <td data-label="Miércoles" class="px-6 py-4"><span class="bg-red-100 text-red-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-red-900 dark:text-red-300">Musculación</span></td>
                <td data-label="Jueves" class="px-6 py-4"><span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">CrossFit</span></td>
                <td data-label="Viernes" class="px-6 py-4"><span class="bg-red-100 text-red-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-red-900 dark:text-red-300">Musculación</span></td>
                <td data-label="Sábado" class="px-6 py-4">-</td>
                <td data-label="Domingo" class="px-6 py-4">-</td>
            </tr>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <td data-label="Hora" class="px-6 py-4 font-medium text-gray-900 dark:text-white whitespace-nowrap">17:00</td>
                <td data-label="Lunes" class="px-6 py-4"><span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">CrossFit</span></td>
                <td data-label="Martes" class="px-6 py-4"><span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">CrossFit</span></td>
                <td data-label="Miércoles" class="px-6 py-4"><span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">CrossFit</span></td>
                <td data-label="Jueves" class="px-6 py-4"><span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">CrossFit</span></td>
                <td data-label="Viernes" class="px-6 py-4"><span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">CrossFit</span></td>
                <td data-label="Sábado" class="px-6 py-4">-</td>
                <td data-label="Domingo" class="px-6 py-4">-</td>
            </tr>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <td data-label="Hora" class="px-6 py-4 font-medium text-gray-900 dark:text-white whitespace-nowrap">18:00</td>
                <td data-label="Lunes" class="px-6 py-4"><span class="bg-red-100 text-red-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-red-900 dark:text-red-300">Musculación</span></td>
                <td data-label="Martes" class="px-6 py-4"><span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">Spinning</span></td>
                <td data-label="Miércoles" class="px-6 py-4"><span class="bg-red-100 text-red-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-red-900 dark:text-red-300">Musculación</span></td>
                <td data-label="Jueves" class="px-6 py-4"><span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">Spinning</span></td>
                <td data-label="Viernes" class="px-6 py-4"><span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">Yoga</span></td>
                <td data-label="Sábado" class="px-6 py-4">-</td>
                <td data-label="Domingo" class="px-6 py-4">-</td>
            </tr>
            <tr class="bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-600">
                <td data-label="Hora" class="px-6 py-4 font-medium text-gray-900 dark:text-white whitespace-nowrap">19:00</td>
                <td data-label="Lunes" class="px-6 py-4"><span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">Yoga</span></td>
                <td data-label="Martes" class="px-6 py-4"><span class="bg-red-100 text-red-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-red-900 dark:text-red-300">Musculación</span></td>
                <td data-label="Miércoles" class="px-6 py-4"><span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">Yoga</span></td>
                <td data-label="Jueves" class="px-6 py-4"><span class="bg-red-100 text-red-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-red-900 dark:text-red-300">Musculación</span></td>
                <td data-label="Viernes" class="px-6 py-4"><span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">Spinning</span></td>
                <td data-label="Sábado" class="px-6 py-4">-</td>
                <td data-label="Domingo" class="px-6 py-4">-</td>
            </tr>
        </tbody>
    </table>
</div>
</section>
</Layout>

<style>
    @media (max-width: 767px) {
        table {
            border: 0;
        }

        table thead {
            border: none;
            clip: rect(0 0 0 0);
            height: 1px;
            margin: -1px;
            overflow: hidden;
            padding: 0;
            position: absolute;
            width: 1px;
        }

        table tr {
            border-bottom: 3px solid #ddd;
            display: block;
            margin-bottom: 0.625em;
        }

        table td {
            border-bottom: 1px solid #ddd;
            display: block;
            font-size: 0.8em;
            text-align: right;
        }

        table td::before {
            content: attr(data-label);
            float: left;
            font-weight: bold;
            text-transform: uppercase;
        }

        table td:last-child {
            border-bottom: 0;
        }
    }
</style>
